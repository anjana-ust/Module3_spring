package practice;

public class qn2 {
	public static void  median(float a[],int l) {
		
		if(l%2==0) {
			System.out.println(a[l/2]+a[(l/2)+1]);
		}
		else {
			System.out.println(a[l/2]);
			
		}
			
	}

	public static void main(String[] args) {
		float [] arr= {1,2,3,4};
		int l=arr.length;
		median(arr,l);
	

	}

}
